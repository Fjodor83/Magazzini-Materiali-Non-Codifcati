@* Help.razor *@
@page "/help"
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <h3>Richiedi le Credenziali</h3>
    <p>Contatta l'amministratore per avere le credenziali di accesso. Puoi inviare una mail a: <a href="mailto:admin@azienda.com">admin@azienda.com</a></p>
    <div class="mt-3">
        <button class="btn btn-outline-primary" @onclick="NavigateHome">Torna alla Home</button>
    </div>
</div>

@code {
    private void NavigateHome()
    {
        NavigationManager.NavigateTo("/");
    }
}