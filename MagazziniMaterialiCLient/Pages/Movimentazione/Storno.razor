@page "/movimentazione/storno"
@using MagazziniMaterialiCLient.Services
@inject MovimentazioneService MovimentazioneService
@inject NavigationManager Navigation

<h3>Storna Movimentazione</h3>

<EditForm OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Movimentazione ID:</label>
        <InputNumber @bind-Value="_movimentazioneId" />
    </div>

    <button type="submit">Storna Movimentazione</button>
</EditForm>

@code {
    private int _movimentazioneId;

    private async Task HandleSubmit()
    {
        var response = await MovimentazioneService.StornaMovimentazione(_movimentazioneId);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/movimentazione/successo");
        }
        else
        {
            // Gestisci gli errori qui
        }
    }
}
